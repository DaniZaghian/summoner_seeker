<!DOCTYPE html>
<html>
<head>
  <title>Summoner Seeker</title>
  <meta charset="utf-8" />
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <!-- Custom -->
  <link rel="stylesheet" type="text/css" href="/css/main.css">
  <link rel="icon" type="image/ico" href="/css/favicon.ico">
  <script>
    var summoners = <%- JSON.stringify(summoners) %>;
  </script>
  <script src="/js/summoners.js"></script>
</head>

<style>
  body {
    background-image: url("/css/ezreal.jpg");
    background-repeat: no-repeat;
    background-color: rgb(102,131,199);
    background-position: 0% 57px;
  }
  .navbar {
    background: rgb(60,27,71);
  }
  .navbar .navbar-nav li a:hover {
    color: rgb(102,131,199);
  }
  </style>

<body>
      
  <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand"><img src="http://i.imgur.com/mfmD9J6.png"></div>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/profile/<%= currentUser.sumName%>">My Profile</a></li>
        <li><a href="/profile/<%= currentUser.sumName%>/messages">Messages</a></li>
        <li><a href="/summoners">View Summoners</a></li>
      </ul>
      <div class="col-sm-3 col-md-3">
          <form class="navbar-form" id="searchform" role="search">
          <div class="input-group">
              <input type="text" id="searchbar" class="form-control" placeholder="search summoners">
              <div class="input-group-btn">
                  <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
          </div>
          </form>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <a class="btn btn-default btn-outline btn-circle collapsed" href="/logout">Logout</a>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>
   
     
  <input type="hidden" name="sumName" id="sumName" class="form-control" value="<%= currentUser.sumName%>">

  <div class="container">
    <div class="row">

        <% for(var i=0; i<summoners.length; i++) { %>
            <div id="summoners-item-<%=summoners[i].sumId%>" class="summonersItem">
              <div id="summoners-pic-<%=summoners[i].sumId%>"></div>
              <p><%=summoners[i].sumName%></p>
              <h4><%=summoners[i].rank%></h4>
            </div>
      <% } %>
      </div>
        
  </div>


</body>

</html>

