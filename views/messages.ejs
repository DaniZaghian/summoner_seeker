<!DOCTYPE html>
<html>
<head>
  <title>Summoner Seeker</title>
  <meta charset="utf-8" />
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <!-- Custom -->
  <link rel="stylesheet" type="text/css" href="/css/main.css">
  <script src="/js/profile.js"></script>
  <link rel="icon" type="image/ico" href="/css/favicon.ico">

</head>

<style>
  .navbar {
    background: rgb(22,14,59);
  }
  .btn-info {
      background: rgb(22,14,59);
      border: rgb(22,14,59);
    }
    .btn-info:hover{
      background: rgb(0,197,246);
    }
</style>


<body>

  <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand"><img src="http://i.imgur.com/mfmD9J6.png"></div>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/profile/<%= currentUser.sumName%>">My Profile</a></li>
        <li><a href="/profile/<%= currentUser.sumName%>/messages">Messages</a></li>
        <li><a href="/summoners">View Summoners</a></li>
      </ul>
      <div class="col-sm-3 col-md-3">
          <form class="navbar-form" id="searchform" role="search">
          <div class="input-group">
              <input type="text" id="searchbar" class="form-control" placeholder="search summoners">
              <div class="input-group-btn">
                  <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
          </div>
          </form>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <a class="btn btn-default btn-outline btn-circle collapsed" href="/logout">Logout</a>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>

  <input type="hidden" name="sumName" id="sumName" class="form-control" value="<%= user.sumName%>">
  <div class="container">
    
    <div class="row">

      <div class="col-sm-6 col-sm-offset-3">
      <h1>Messages<h1>
      <ul class="list-unstyled">
      <% for(var i = 0; i < user.messages.length; i++){ %>
        <li class = "message">
          <h3><%=user.messages[i].subject%></h3>
          <p><%=user.messages[i].content%></p>
        </li>
      <% } %>
      </ul>
      </div>
    </div>
  </div>
</body>